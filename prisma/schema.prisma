// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserType {
  STUDENT
  TEACHER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  type      UserType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


  @@map("user")
}
